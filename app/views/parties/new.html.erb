<h1>New Party</h1>
<%= form_for @party do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :date %>
    <%= f.date_field :date %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <%= f.fields_for :category do |h|  %>
    <%= h.label :name %>
    <%= h.text_field :name %>
    <% end %>
    <%= f.submit %>
<% end %>